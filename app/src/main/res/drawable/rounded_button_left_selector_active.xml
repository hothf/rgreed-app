<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="@color/colorStatusOpen">

    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/colorStatusOpen"/>
            <stroke android:width="2dp" android:color="@color/colorStatusOpen"/>
            <corners android:topLeftRadius="@dimen/default_corner_radius"
                     android:bottomLeftRadius="@dimen/default_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/colorStatusOpen"/>
            <solid android:color="@color/colorStatusOpen"/>
            <corners android:topLeftRadius="@dimen/default_corner_radius"
                     android:bottomLeftRadius="@dimen/default_corner_radius"/>
        </shape>
    </item>
</ripple>