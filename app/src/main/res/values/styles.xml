<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="navText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ptserifwebitalic</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/fontNav</item>
    </style>

    <style name="buttonDefault" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_default_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ptserifwebbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontDefaultInverted</item>
    </style>

    <style name="defaultText" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ptserifwebregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontDefault</item>
    </style>

    <style name="defaultText.Bold" parent="defaultText">
        <item name="android:fontFamily">@font/ptserifwebbold</item>
    </style>

    <style name="defaultText.Title" parent="defaultText">
        <item name="android:fontFamily">@font/ptserifwebbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fontNav</item>
    </style>

    <style name="defaultText.Title.Alternative" parent="defaultText">
        <item name="android:fontFamily">@font/ptserifwebbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fontDefault</item>
    </style>

    <style name="defaultText.Title.Alternative.Italic" parent="defaultText">
        <item name="android:fontFamily">@font/ptserifwebbolditalic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fontDefault</item>
    </style>

    <style name="defaultText.Small" parent="defaultText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="defaultText.Bold.Small" parent="defaultText.Bold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="highlightText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ptserifwebregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorHighlight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ptserifwebregular</item>
    </style>

</resources>
