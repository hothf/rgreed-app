<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.skyfallapp.ui.consensus.consensusdetail.ConsensusDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultBackgroundSecondary">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackgroundPrimary">

            <de.ka.skyfallapp.utils.AppToolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setNavButtonClickListener="@{viewModel.onBack}"
                app:setNavText="@{viewModel.title}" />

        </com.google.android.material.appbar.AppBarLayout>


        <de.ka.skyfallapp.utils.RefreshSwipeView
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            app:setOnRefreshListener="@{viewModel.swipeToRefreshListener}"
            app:setRefreshing="@{viewModel.refresh}">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar">

                <androidx.cardview.widget.CardView
                    android:id="@+id/topCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_8"
                    app:cardBackgroundColor="@color/defaultBackgroundPrimary"
                    app:cardCornerRadius="@dimen/default_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/defaultText.Bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_16"
                                android:layout_marginTop="@dimen/default_12"
                                android:layout_marginEnd="@dimen/default_8"
                                android:layout_toStartOf="@+id/tools"
                                android:gravity="start"
                                android:text="@{viewModel.description}"
                                android:visibility="@{viewModel.descriptionVisibility}"
                                tools:text="description description description description descriptiondescription descriptiondescription" />

                            <ImageView
                                android:id="@+id/tools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/default_8"
                                android:layout_marginEnd="@dimen/default_6"
                                android:background="@drawable/round_button_transparent_selector"
                                android:onClick="@{(v)->viewModel.askForConsensusTools(v)}"
                                android:src="@drawable/ic_more"
                                android:tint="@color/colorAccent"
                                android:visibility="@{viewModel.adminAndNotFinishedVisibility}"
                                tools:visibility="visible" />
                        </RelativeLayout>


                        <TableLayout
                            android:id="@+id/infoTable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/default_16"
                            android:stretchColumns="*">

                            <TableRow>

                                <TextView
                                    style="@style/defaultText.Bold.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/consensus_detail_status" />

                                <LinearLayout
                                    android:id="@+id/statusContainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/default_16"
                                        android:layout_height="@dimen/default_16"
                                        android:layout_marginStart="@dimen/default_8"
                                        android:src="@drawable/ic_small_secure"
                                        android:tint="@color/colorHighlight"
                                        android:visibility="@{viewModel.adminVisibility}" />

                                    <ImageView
                                        android:layout_width="@dimen/default_16"
                                        android:layout_height="@dimen/default_16"
                                        android:layout_marginStart="@dimen/default_8"
                                        android:src="@drawable/ic_small_public"
                                        android:tint="@{viewModel.statusColor}"
                                        android:visibility="@{viewModel.publicVisibility}" />

                                    <ImageView
                                        android:layout_width="@dimen/default_16"
                                        android:layout_height="@dimen/default_16"
                                        android:layout_marginStart="@dimen/default_8"
                                        android:src="@drawable/ic_small_unlock"
                                        android:tint="@{viewModel.statusColor}"
                                        android:visibility="@{viewModel.unlockedVisibility}" />

                                    <ImageView
                                        android:layout_width="@dimen/default_16"
                                        android:layout_height="@dimen/default_16"
                                        android:layout_marginStart="@dimen/default_8"
                                        android:src="@drawable/ic_small_flag"
                                        android:tint="@color/colorStatusFinished"
                                        android:visibility="@{viewModel.finishedVisibility}" />
                                </LinearLayout>

                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/defaultText.Bold.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/consensus_detail_creator" />

                                <TextView
                                    style="@style/defaultText.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="@{viewModel.creator}"
                                    tools:text="Tester" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/defaultText.Bold.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/consensus_detail_creationdate" />

                                <TextView
                                    style="@style/defaultText.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="@{viewModel.creationDate}"
                                    tools:text="1/1/2001" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/defaultText.Bold.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/consensus_detail_enddate" />

                                <TextView
                                    style="@style/defaultText.Dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="@{viewModel.endDate}"
                                    tools:text="2/1/2012" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/blank"
                    style="@style/defaultText.Title.Alternative.Italic"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/topCard"
                    android:gravity="center"
                    android:text="@string/consensus_detail_no_suggestions"
                    android:visibility="@{viewModel.blankVisibility}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/blank"
                    android:adapter="@{viewModel.adapter}"
                    app:layoutManager="@{viewModel.layoutManager()}"
                    app:setItemAnimator="@{viewModel.itemAnimator}" />

            </RelativeLayout>
        </de.ka.skyfallapp.utils.RefreshSwipeView>

        <de.ka.skyfallapp.utils.LockView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:setListener="@{viewModel.unlockListener}"
            app:updateState="@{viewModel.unlockState}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
