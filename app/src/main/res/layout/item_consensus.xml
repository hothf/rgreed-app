<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.skyfallapp.ui.consensus.consensuslist.ConsensusItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemContainer"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_124"
        android:layout_marginStart="@dimen/default_8"
        android:layout_marginTop="@dimen/default_8"
        android:layout_marginEnd="@dimen/default_8"
        app:cardBackgroundColor="@color/defaultBackgroundSecondary"
        app:cardCornerRadius="@dimen/default_corner_radius">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_90"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/defaultBackgroundPrimary"
            app:cardCornerRadius="@dimen/small_corner_radius">

            <View
                android:layout_width="@dimen/default_16"
                android:layout_height="match_parent"
                android:background="@{viewModel.statusColor}"
                tools:background="@color/fontDefault" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_32"
                android:layout_marginTop="@dimen/default_12"
                android:layout_marginEnd="@dimen/default_12"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/statusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/default_18"
                        android:layout_height="@dimen/default_18"
                        android:layout_marginEnd="@dimen/default_6"
                        android:src="@{viewModel.statusImage}" />

                    <TextView
                        android:id="@+id/admin"
                        style="@style/highlightText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/default_6"
                        android:background="@drawable/bg_rounded"
                        android:paddingStart="@dimen/default_2"
                        android:paddingEnd="@dimen/default_2"
                        android:text="@string/consensus_admin"
                        android:visibility="@{viewModel.adminVisibility}"
                        tools:text="Admin" />

                    <TextView
                        android:id="@+id/textEnded"
                        style="@style/defaultText.Bold.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{viewModel.ended}"
                        android:textColor="@{viewModel.statusColor}"
                        tools:text="Completed on 2/2/2019" />

                    <TextView
                        android:id="@+id/textRemains"
                        style="@style/defaultText.Bold.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{viewModel.remains}"
                        android:textColor="@{viewModel.statusColor}"
                        tools:text="Completed on 2/2/2019" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_8"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        style="@style/defaultText.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{viewModel.title}"
                        android:textColor="@{viewModel.statusColor}"
                        tools:text="Title Title Title Title Title Title Title Title" />

                    <TextView
                        android:id="@+id/textDescription"
                        style="@style/defaultText.Dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{viewModel.description}"
                        android:visibility="@{viewModel.descriptionVisibility}"
                        tools:text="A description description description description description description description"
                        tools:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_90"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <TextView
                android:id="@+id/textSuggestions"
                style="@style/defaultText.Bold.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@{viewModel.suggestions}"
                tools:text="5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{()->viewModel.onShare()}"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_small_share"
                    android:tint="@color/fontDefault" />

                <TextView
                    style="@style/defaultText.Bold.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/consensus_share" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
