<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.skyfallapp.ui.consensus.consensuslist.ConsensusItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemContainer"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_112"
        android:layout_marginStart="@dimen/default_8"
        android:layout_marginEnd="@dimen/default_8"
        app:cardBackgroundColor="@color/defaultBackgroundPrimary"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardElevation="@dimen/default_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/defaultText.Bold.Light.Title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_86"
            android:background="@{viewModel.statusBackground}"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/default_72"
            android:paddingTop="@dimen/default_28"
            android:paddingEnd="@dimen/default_8"
            android:paddingBottom="@dimen/default_10"
            android:text="@{viewModel.title}"
            app:autoSizeMaxTextSize="@dimen/font_max_size"
            app:autoSizeTextType="uniform"
            tools:background="@drawable/bg_rounded_finished"
            tools:text="Title Title Title Title Title Title Title Title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/status"
                android:layout_width="@dimen/default_48"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_16"
                android:paddingBottom="@dimen/default_6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/default_48"
                    android:layout_height="@dimen/default_36"
                    android:background="@drawable/bg_rounded_alternative"
                    android:padding="@dimen/default_4"
                    android:src="@{viewModel.statusImage}"
                    android:tint="@color/fontDefaultInverted"
                    tools:src="@drawable/ic_small_done" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="@dimen/default_10"
                android:layout_toStartOf="@+id/topDivider"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/adminImage"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_14"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_small_admin"
                    android:tint="@color/colorHighlight"
                    android:visibility="@{viewModel.adminVisibility}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/creator"
                    style="@style/defaultText.Bold.Small.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_4"
                    android:gravity="start"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{viewModel.createdBy}"
                    android:textColor="@{viewModel.creatorColor}"
                    tools:text="By X dffefff wfwfw wfw" />
            </LinearLayout>

            <TextView
                android:id="@+id/topDivider"
                style="defaultText.Bold.Small.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_10"
                android:gravity="center"
                android:textColor="@color/fontDefaultInverted" />

            <TextView
                android:id="@+id/textEnded"
                style="@style/defaultText.Bold.Small.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/default_10"
                android:layout_marginEnd="@dimen/default_16"
                android:layout_toEndOf="@+id/topDivider"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{viewModel.ended}"
                android:visibility="@{viewModel.finishedVisibility}"
                tools:text="Completed on 2/2/2019" />

            <TextView
                android:id="@+id/textRemains"
                style="@style/defaultText.Bold.Small.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/default_10"
                android:layout_marginEnd="@dimen/default_16"
                android:layout_toEndOf="@+id/topDivider"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{viewModel.remains}"
                android:visibility="@{viewModel.notFinishedVisibility}"
                tools:text="Completed on 2/2/2019" />

            <TextView
                android:id="@+id/textSuggestions"
                style="@style/defaultText.Bold.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/default_8"
                android:layout_toStartOf="@+id/bottomDivider"
                android:gravity="center_horizontal"
                android:text="@{viewModel.suggestions}"
                tools:text="5 Suggestions" />

            <TextView
                android:id="@+id/bottomDivider"
                style="@style/defaultText.Bold.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/default_4"
                android:layout_marginEnd="@dimen/default_4"
                android:layout_marginBottom="@dimen/default_12" />

            <TextView
                android:id="@+id/voters"
                style="@style/defaultText.Bold.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/default_8"
                android:layout_toEndOf="@+id/bottomDivider"
                android:gravity="center_horizontal"
                android:text="@{viewModel.voters}"
                android:textColor="@{viewModel.votedTextColor}"
                tools:text="5 Voters" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
