<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="de.ka.skyfallapp.ui.home.consensuslist.HomeItemViewModel"/>
    </data>


    <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:id="@+id/itemContainer"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@{viewModel.backColor}"
            android:layout_height="wrap_content"
            android:minHeight="136dp">

        <RelativeLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    style="@style/defaultText.Small"
                    android:id="@+id/creator"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.creator}"
                    tools:text="Creator"/>

            <TextView
                    style="@style/defaultText.Title"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/creator"
                    android:text="@{viewModel.title}"
                    tools:text="Title"/>

            <TextView
                    style="@style/defaultText"
                    android:id="@+id/textDescription"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@{viewModel.description}"
                    tools:text="A description"/>

            <TextView
                    android:layout_marginTop="16dp"
                    android:id="@+id/textSuggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textDescription"
                    android:text="@{viewModel.suggestions}"
                    tools:text="5 suggestions"/>


            <TextView
                    android:id="@+id/textParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textSuggestions"
                    android:text="@{viewModel.participants}"
                    tools:text="participants: 5"/>

            <TextView
                    android:id="@+id/textEndsIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="@{viewModel.endsIn}"
                    tools:text="5 Days"/>

            <TextView
                    style="@style/highlightText"
                    android:id="@+id/admin"
                    android:background="@drawable/bg_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:layout_marginTop="4dp"
                    android:paddingEnd="4dp"
                    android:visibility="@{viewModel.adminVisibility}"
                    android:text="@string/consensus_admin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textParticipants"
                    tools:text="Admin"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="@{viewModel.dividerVisibility}"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
