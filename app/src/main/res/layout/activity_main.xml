<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="de.ka.skyfallapp.ui.MainViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/mainRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            tools:context=".ui.MainActivity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <fragment
                    android:id="@+id/main_nav_host_fragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_navigation"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/nav_graph_main"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                    style="@style/Widget.Design.BottomNavigationView"
                    android:layout_alignParentBottom="true"
                    android:background="@color/defaultBackgroundPrimary"
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottomBarSize"
                    android:visibility="@{viewModel.barVisibility}"
                    app:menu="@menu/bottom_navigation"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorPrimary"
                    app:backgroundTint="@color/defaultBackgroundSecondary"
                    android:src="@drawable/ic_add"
                    app:useCompatPadding="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/bottom_navigation"
                    android:onClick="@{()->viewModel.onAddClick()}"/>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
