<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.skyfallapp.ui.consensus.consensusdetail.neweditsuggestion.NewEditSuggestionViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultBackgroundSecondary">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackgroundPrimary">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/nav"
                        android:layout_width="@dimen/default_32"
                        android:layout_height="@dimen/default_32"
                        android:padding="@dimen/default_4"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_button_transparent_selector"
                        android:onClick="@{(v)->viewModel.onBack(v)}"
                        android:src="@drawable/ic_back" />

                    <TextView
                        style="@style/navText"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginStart="@dimen/default_16"
                        android:layout_marginEnd="@dimen/default_16"
                        android:layout_toStartOf="@+id/loadingContainer"
                        android:layout_toEndOf="@+id/nav"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{viewModel.header}"
                        tools:text="TITLE title title  title  title  title  title  title" />

                    <LinearLayout
                        android:id="@+id/loadingContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <Button
                            style="@style/buttonDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/default_8"
                            android:onClick="@{(v) -> viewModel.onSave(v)}"
                            android:text="@{viewModel.saveText}"
                            android:visibility="@{viewModel.buttonVisibility}"
                            tools:text="Save" />

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            tools:visibility="gone"
                            android:visibility="@{viewModel.loadingVisibility}" />

                    </LinearLayout>
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <androidx.cardview.widget.CardView
                android:id="@+id/topCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/defaultBackgroundPrimary"
                app:cardCornerRadius="@dimen/default_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/defaultText.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/suggestions_newedit_details" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="@string/suggestions_newedit_title_hint"
                        android:layout_marginEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lockInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@{viewModel.title}"
                            app:addTextChangedListener="@{viewModel.getTextChangedListener}"
                            app:setOnEditorActionListener="@{viewModel.getDoneListener}"
                            app:setSelection="@{viewModel.titleSelection}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/defaultText.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/suggestions_newedit_votestart" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="1.0"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/defaultText.Clickable"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent"
                            android:background="@drawable/rect_button_transparent_selector"
                            android:gravity="center"
                            android:onClick="@{(v)->viewModel.onOpenDatePicker(v)}"
                            android:text="@{viewModel.voteStartDate}"
                            tools:text="12.12.2019" />

                        <TextView
                            style="@style/defaultText.Clickable"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:background="@drawable/rect_button_transparent_selector"
                            android:layout_height="match_parent"
                            android:onClick="@{(v)->viewModel.onOpenTimePicker(v)}"
                            android:text="@{viewModel.voteStartTime}"
                            tools:text="10:15" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
