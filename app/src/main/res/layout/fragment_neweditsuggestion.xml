<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.skyfallapp.ui.consensus.consensusdetail.neweditsuggestion.NewEditSuggestionViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultBackgroundSecondary">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackgroundPrimary">

            <de.ka.skyfallapp.utils.AppToolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setActionButtonClickListener="@{viewModel.onSave}"
                app:setActionButtonText="@{viewModel.saveText}"
                app:setNavButtonClickListener="@{viewModel.onBack}"
                app:setNavText="@{viewModel.header}"
                app:updateState="@{viewModel.bar}" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <androidx.cardview.widget.CardView
                android:id="@+id/topCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_8"
                app:cardBackgroundColor="@color/defaultBackgroundPrimary"
                app:cardCornerRadius="@dimen/default_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_16"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/suggestions_newedit_title_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lockInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@{viewModel.title}"
                            app:addTextChangedListener="@{viewModel.getTextChangedListener}"
                            app:setOnEditorActionListener="@{viewModel.getDoneListener}"
                            app:setSelection="@{viewModel.titleSelection}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_48"
                        android:layout_marginTop="@dimen/default_8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/voteDateInfo"
                            style="@style/defaultText.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/default_4"
                            android:text="@string/suggestions_newedit_votestart" />

                        <TextView
                            style="@style/defaultText.Clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/voteTime"
                            android:layout_toEndOf="@+id/voteDateInfo"
                            android:onClick="@{(v)->viewModel.onOpenDatePicker(v)}"
                            android:text="@{viewModel.voteStartDate}"
                            tools:text="12.12.2019" />

                        <TextView
                            android:id="@+id/voteTime"
                            style="@style/defaultText.Clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:onClick="@{(v)->viewModel.onOpenTimePicker(v)}"
                            android:paddingStart="@dimen/default_4"
                            android:paddingEnd="@dimen/default_4"
                            android:text="@{viewModel.voteStartTime}"
                            tools:text="10:15" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
